{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "jsx": "preserve",
    "target": "ESNEXT",       
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "jest"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],  
     "outDir": "./build",
     "importsNotUsedAsValues": "preserve"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "example/**/*.ts",
    "example/**/*.tsx",
    "example/**/*.vue",    
  ],
  "exclude": [
    "node_modules"
  ],
  "directories": {
    "example": "example"
  },
}
